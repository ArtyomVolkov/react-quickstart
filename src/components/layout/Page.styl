.app-content
  header
    width: 100%
    position fixed
    display flex
    justify-content center
    height 45px
    padding-left 15px
    margin 0
    background-color #efefef
    border-bottom 1px solid #dcdcdc
    z-index 99999

  main
    padding 45px 0
    display flex
    height 100%
    max-width 1140px
    flex-direction column
    margin 0 auto

  footer
    position fixed
    width: 100%
    display flex
    justify-content center
    bottom 0
    height 45px
    background-color #efefef
    border-top 1px solid #dcdcdc